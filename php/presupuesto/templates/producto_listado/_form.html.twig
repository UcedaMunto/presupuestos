{{ form_start(form, {'action': app.request.uri}) }}
<input type="hidden" name="_csrf_token" value="{{ csrf_token('form_action') }}">

<div class="container card border-left-warning p-3">
    <div class="form-group row">
        <div class="col-md-4">
            {{ form_label(form.idPresupuesto) }}
            {{ form_widget(form.idPresupuesto) }}
        </div>
        <div class="col-md-4">
            {{ form_label(form.idReferencia) }}
            {{ form_widget(form.idReferencia) }}
        </div>
        <div class="col-md-4">
            {{ form_label(form.cantidad) }}
            {{ form_widget(form.cantidad) }}
        </div>
    </div>
    <div class="form-group row mt-3">
        <div class="col-md-12 text-center">
            {{ form_rest(form) }}
            <button class="btn btn-primary">{{ button_label|default('Guardar') }}</button>
        </div>
    </div>
</div>

{{ form_end(form) }}
